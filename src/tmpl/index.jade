      window.toggleFlexbox = function(e) {
        e.preventDefault();
        var html = document.getElementsByTagName('html')[0];
        var hasFlexbox = html.className === 'flexbox';
        html.className = hasFlexbox ? '' : 'flexbox';
        e.target.textContent = hasFlexbox ? 'Toggle Compatibility - flexbox off' : 'Toggle Compatibility - flexbox on';
      }
